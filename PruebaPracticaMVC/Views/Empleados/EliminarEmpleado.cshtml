@model PruebaPracticaMVC.Models.EmpleadoViewModel

@{
    ViewData["Title"] = "Eliminar Empleado";
}

<h2>¿Estás seguro de que deseas eliminar este empleado?</h2>

<div class="card mt-3">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-2">ID</dt>
            <dd class="col-sm-10">@Model.Id</dd>

            <dt class="col-sm-2">Nombre</dt>
            <dd class="col-sm-10">@Model.Nombre</dd>

            <dt class="col-sm-2">Correo</dt>
            <dd class="col-sm-10">@Model.Email</dd>

            <dt class="col-sm-2">Puesto</dt>
            <dd class="col-sm-10">@Model.Cargo</dd>
        </dl>
    </div>
</div>

<form asp-action="EliminarConfirmado" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
