@model PruebaPracticaMVC.Models.EmpleadoViewModel

@{
    ViewData["Title"] = "Editar Empleado";
}

<h2>Editar Empleado</h2>

<form asp-action="EditarEmpleado" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Nombre"></label>
        <input asp-for="Nombre" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Cargo"></label>
        <input asp-for="Cargo" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary mt-2">Guardar Cambios</button>
    <a asp-action="Index" class="btn btn-secondary mt-2">Cancelar</a>
</form>
