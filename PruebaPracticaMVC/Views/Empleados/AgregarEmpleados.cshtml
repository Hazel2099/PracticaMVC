@model PruebaPracticaMVC.Models.EmpleadoViewModel

@{
    ViewData["Title"] = "Agregar Empleado";
}

<h2>Agregar un nuevo Empleado</h2>

<form asp-action="AgregarEmpleados" method="post">
    <div class="form-group">
        <label asp-for="Nombre"></label>
        <input asp-for="Nombre" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Cargo"></label>
        <input asp-for="Cargo" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary mt-2">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary mt-2">Cancelar</a>
</form>
